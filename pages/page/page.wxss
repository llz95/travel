/* pages/page/page.wxss */
@import "../../wxParse/wxParse.wxss";
.wrapper{
  padding: 5rpx;
}
.excerpt{
  color:#626262; 
  font-size:32rpx;
  line-height:64rpx;
  text-align: left;
}
.entry-title {
  color:#333333;
  font-weight:500;
  line-height: 1.6;
  text-align: center;
  margin-bottom: 24rpx; 
}
.clearfix{
  margin:5px 15px;
  display:inline-block;
}
.wxParse-h2 {
  color:#444444;
  font-size:36rpx;
}
.wxParse-a {
    color: #21759b
}
.wxParse-p {
  color:#555555;
  font-size:32rpx;
  line-height: 1.6;
  margin-top: 0.8em;
  margin-bottom: 0.8em
}
.wxParse-p image {
    margin: 0 auto;
    width: 100% !important;
    box-shadow: 2rpx 4rpx 16rpx #666
}
.wxParse-ul {
  padding:10rpx 20rpx;
  background:#efefef;
  margin:20rpx auto;
}
.wxParse-li {
  font-size:30rpx;
  padding:0 10rpx;
}
.wxParse-li-circle {
  margin-right:20rpx;
}
.content-article {
  margin-bottom:40rpx;
}
.entry-back {
  text-align: center;
  margin:20rpx auto;
}
.home-button {
  color: #eee;
  min-width: 240rpx;
  margin-top: 30rpx;
  font-weight: normal;
  border-radius: 300rpx;
  font-size: 0.785714286rem;
  background-color: #FF99D6;
  background-repeat: repeat-x;
}
.home-button::after {
  border:none;
}
.ditail-copyright {
  color: #999;
  font-size: 26rpx;
  line-height: 1.2;
  font-weight: normal;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 160rpx;
}