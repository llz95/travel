/* pages/hot/hot.wxss */
/**hot.wxss**/
.container {
  padding: 100rpx 24rpx;
}
.list-header {
  padding: 50rpx 0;
  text-align: left;
  font-weight: normal;
  font-size: 40rpx;
  line-height: 40rpx;
  color: #21759b;
  border-bottom: 2rpx solid #ededed;
  margin-bottom: 48rpx;
}
/*topic list*/
.topic-common-list {
  padding: 30rpx 30rpx;
}
.topic-list-item {
  position: relative;
  border-bottom: 1px solid #eee;
  overflow: hidden;
  clear: both;
  border: 1px solid #ccc;
  border-radius: 6px;
  margin-bottom: 30rpx;
  background: #fff;
}
.topic-list-item  image.cover {
  width: 100%;
  height: 300rpx;
}
.topic-content-title {
  padding: 10rpx 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.topic-content-title text {
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: bold;
  color: #121b23;
}
.topic-content-brief {
  padding: 0rpx 30rpx 30rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #989ebb;
}
.top-bar {
  height: 100rpx;
  background: #33993b;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 1;
}
.top-bar-item {
  display: inline-block;
  /*background: #33993b;*/
  width: 25%;
  color: #ffffff;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  
}
.top-bar-item-Selected {
  color: #333;
  background: #ffffff;
  border-bottom: 1px solid #ffffff;
}
.hot-list {
  border-bottom: 1px solid #eee;
  padding: 24rpx;
  min-height: 150rpx;
  overflow: hidden;
}
.hot-list .hot-list-item {
  position: relative;
  margin-bottom:24rpx;
}
.hot-list .hot-list-item image.cover {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 180rpx;
  height: 140rpx;
}
.hot-list .hot-list-item .hot-content-title {
  margin-left: 200rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.hot-list .hot-list-item .hot-content-title text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  line-height: 1.4;
  font-weight: 400;
  color: #3a4040;
}
.hot-list .hot-list-item .hot-date {
  margin-left: 200rpx;
}
.hot-list .hot-list-item .hot-date image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.hot-list .hot-list-item .hot-date text {
  color: #959595;
  margin-right: 32rpx;
  font-size: 24rpx;
  line-height: 1.2;
  font-weight: normal;
}
.hot-list .no-item {
  color:#959595;
  text-align:center;
  line-height:1.6;
  font-size:32rpx;
  padding:20rpx 0;
}